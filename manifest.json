{
  "manifest_version": 3,
  "name": "MoJuBlock - Judol Blocker",
  "version": "1.0.0",
  "description": "Mouto-chan Judol Block - Effective Adult Content Blocker",
  "permissions": [
    "storage",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content-script.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "MoJuBlock Settings"
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/utils/page-scripts.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
